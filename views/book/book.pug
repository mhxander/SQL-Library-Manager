extends ../layout

block content
  h1= book.title
    h2 Author: #{book.author}
    if book.genre
      p Genre: #{book.genre}
    if book.year
      p Year Published: #{book.year}
    a(class="button" href="/books/" + book.id + "/edit") Edit book info
    a(class="button_d" href="/books/" + book.id + "/delete") Delete book
    a(class="button_d" href="/books") Home